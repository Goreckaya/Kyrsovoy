<Window x:Class="Kursovoy.Windows.AddPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursovoy.Windows"
        mc:Ignorable="d"
        Title="AddPatient" Height="740" Width="965"
      >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="711*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="377*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <TextBlock Text="Фамилия:" FontFamily="Comic Sans MS"/>
                <TextBox x:Name="FName"/>
                <Label Height="10"/>
                <TextBlock Text="Имя:" FontFamily="Comic Sans MS"/>
                <TextBox x:Name="Name"/>
                <Label Height="10"/>
                <TextBlock Text="Отчество:" FontFamily="Comic Sans MS"/>
                <TextBox x:Name="LName"/>
                <Label Height="10"/>
                <TextBlock Text="Номер телефона:" FontFamily="Comic Sans MS"/>
                <TextBox x:Name="PhoneNumber"/>
                <Label Height="10"/>
                <TextBlock Text="Дата рождения:" FontFamily="Comic Sans MS"/>
                <DatePicker x:Name="DateOfBirth"/>
                <Label Height="10"/>
                <TextBlock Text="Адрес регистрации:" FontFamily="Comic Sans MS"/>
                <TextBox x:Name="Address"/>
                <Label Height="10"/>
                <TextBlock Text="Пол:" FontFamily="Comic Sans MS"/>
                <ComboBox x:Name="Gender"/>
                <Label Height="10"/>
                <TextBlock Text="Полис:" FontFamily="Comic Sans MS"/>
                <TextBox x:Name="Polis"/>
                <Label Height="10"/>
                <TextBlock Text="Серия и номер паспорта:" FontFamily="Comic Sans MS"/>
                <TextBox x:Name="Pasport"/>
                <Label Height="10"/>
                <TextBlock Text="Номер снилс:" FontFamily="Comic Sans MS"/>
                <TextBox x:Name="Snils"/>
                <Label Height="10"/>
                <TextBlock Text="Гражданство:" FontFamily="Comic Sans MS"/>
                <ComboBox x:Name="Grajdanstvo"/>
                <Label Height="10"/>
                <TextBlock Text="Статус:" FontFamily="Comic Sans MS"/>
                <ComboBox x:Name="Status"/>


                <Label Height="10"/>
                <Label Height="10"/>
                <Button Content="Добавить пользователя" Click="AddPatient_Click" x:Name="AddPatientt" Height="50" Background="#BDE2EB" FontFamily="Comic Sans MS"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
